<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrar Request Transaction</title>
    <link rel="stylesheet" href="/css/StatReqs.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="/js/Window1.js"></script>
</head>
<body>
    <header>
        <div class="logo-section">
            <img src="~/logos/LOALOA.png" alt="College Logo" class="logo">
            <span class="college-name">Bachelor of Science in Information Technology</span>
        </div>
        <nav class="navbar">
            <a style="color: #7D7878;" href="/Home/Window1">Home</a>
            <a style="color: #7D7878;" href="/Home/W1Upload">Upload File</a>

            <div class="dropdown">
                <a style="color: #ffc107" href="#" class="dropbtn">Transaction</a>
                <div class="dropdown-content">
                    <a href="/Home/W1Transac">Requisition</a>
                    <a href="#">Release</a> <!-- Update this with the correct URL later if needed -->
                </div>
            </div>

            <a style="color: #33805C" href="#" onclick="handleLogout(event)">Logout</a>
        </nav>
    </header>

    <!-- Modal for logout confirmation -->
    <div id="logoutModal" class="modal">
        <div class="modal-content">
            <img src="~/logos/warning.png" alt="Warning Icon">
            <h3>Confirmation</h3>
            <p>Are you sure you want to log off?</p>
            <div class="button-container">
                <button class="modal-button yes-button" onclick="confirmLogout()">Yes</button>
                <button class="modal-button no-button" onclick="cancelLogout()">No</button>
            </div>
        </div>
    </div>

    <!-- Main content section -->
    <div class="main-content">
        <!-- Back Button -->
        <a href="/Home/W1Transac" class="back-button">← Back</a>

        <!-- Total of Transaction (Placed near the top) -->
        <div class="total-transactions">
            <h2>1</h2>
            <p>Total Request</p>
        </div>

        <!-- Controls -->
        <div class="controls">
            <!-- View Button on the left -->
            <div class="view-button">
                <button style="border: none; background-color: #ffc107; color: #000; font-size: 16px; padding: 10px; border-radius: 4px;">
                    <i class="fas fa-eye" style="color: #000;"></i> View
                </button>
            </div>

            <div class="entries-selector">
                <label for="show-entries">Show</label>
                <select id="show-entries">
                    <option value="all">All</option>
                    <option value="5">5</option>
                    <option value="10">10</option>
                    <option value="30">30</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
                <label for="-show-entries">entries</label>
            </div>

            <div class="date-picker">
                <input type="date" id="date-picker">
            </div>


            <div class="search-bar">
                <input type="text" placeholder="Search.." id="search">
            </div>
        </div>

        <!-- Table -->
        <table class="transaction-table">
            <thead>
                <tr>
                    <th>ACTIONS</th>
                    <th>STUDENT NO.</th>
                    <th>COURSE</th>
                    <th>YEAR LEVEL</th>
                    <th>SERVICE INVOICE</th>
                    <th>PRIORITIZATION</th>
                    <th>DOCUMENT</th>
                    <th>DATE OF REQUISITION</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><input type="checkbox"></td>
                    <td>1603-21</td>
                    <td>BSIT</td>
                    <td>FOURTH YEAR</td>
                    <td>20241010-101-001</td>
                    <td>USUAL</td>
                    <td>Good Moral</td>
                    <td>MM/DD/YYYY</td>
                </tr>
            </tbody>
        </table>
    </div>



</body>
</html>
